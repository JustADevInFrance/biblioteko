<html xmlns:tal="http://xml.zope.org/namespaces/tal">
<head>
    <title tal:content="title">Modération</title>
</head>
<body>

<h1 tal:content="title">Modération des documents</h1>

<p tal:condition="message" tal:content="message">Message</p>

<ul>
  <li tal:repeat="file files">
      <span tal:content="file">Nom du fichier</span>

      <!-- Bouton consulter -->
      <a tal:attributes="href string:/moderation/view/${file}">Consulter</a>

      <!-- Bouton approuver -->
      <a tal:attributes="href string:/moderation/approve/${file}">Approuver</a>

      <!-- Bouton refuser -->
      <a tal:attributes="href string:/moderation/reject/${file}">Refuser</a>
  </li>
</ul>

<a href="/">Retour</a>

</body>
</html>
