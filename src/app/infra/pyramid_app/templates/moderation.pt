<html xmlns:tal="http://xml.zope.org/namespaces/tal">
  <head>
    <title tal:content="title">Modération des documents</title>
    <style>
      body { font-family: Arial, sans-serif; padding: 20px; }
      table { width: 100%; border-collapse: collapse; }
      th, td { border: 1px solid #ccc; padding: 8px; text-align: left; }
      button { padding: 5px 10px; margin-right: 5px; }
      .approve { background-color: #28a745; color: white; border: none; cursor: pointer; }
      .reject { background-color: #dc3545; color: white; border: none; cursor: pointer; }
      .consult { background-color: #007bff; color: white; border: none; cursor: pointer; }
    </style>
  </head>
  <body>
    <h1 tal:content="title">Modération des documents</h1>

    <table>
      <tr>
        <th>Fichier</th>
        <th>Actions</th>
      </tr>
      <tal:block repeat="fichier view/moderation_files">
        <tr>
          <td tal:content="structure/fichier">Nom du fichier</td>
          <td>
            <form tal:attributes="action request.path; method 'post'">
              <input type="hidden" name="filename" tal:attributes="value structure/fichier"/>
              <button type="submit" name="action" value="consulter" class="consult">Consulter</button>
              <button type="submit" name="action" value="valider" class="approve">Valider</button>
              <button type="submit" name="action" value="refuser" class="reject">Refuser</button>
              <input type="text" name="commentaire" placeholder="Commentaire (optionnel)" />
            </form>
          </td>
        </tr>
      </tal:block>
    </table>
  </body>
</html>
